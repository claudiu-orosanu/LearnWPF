<Window x:Class="Part_1.Windows._1TextBoxControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part_1.Windows"
        mc:Ignorable="d"
        Title="TextBoxControl" Height="350" Width="525"
        WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <!--<Border BorderBrush="BlueViolet" BorderThickness="1">
            <ScrollViewer>
                <TextBox AcceptsReturn="True" TextWrapping="Wrap" SpellCheck.IsEnabled="True" Language="en-US"/>
            </ScrollViewer>
        </Border>-->
        
        <DockPanel Margin="10">
            <TextBox Name="txtbox" SelectionChanged="TextBox_SelectionChanged" DockPanel.Dock="Top"/>
            <TextBox Name="tboxwest" DockPanel.Dock="Left" Width="20"/>
            <Button Click="Button_Click" DockPanel.Dock="Right" Height="20" Width="20"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Margin="5" Name="txtStatus" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" />
        </DockPanel>
        
    </Grid>
</Window>
